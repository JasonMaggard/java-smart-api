# Smart API Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=smartapi
POSTGRES_PASSWORD=change_me_postgres
POSTGRES_DB=smartapi_db

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis

# ============================================
# Anthropic AI Configuration
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Claude model to use for documentation generation
# Options: claude-haiku-4-5-20251001, claude-sonnet-4-20250514, claude-opus-4-20250514
ANTHROPIC_MODEL=claude-haiku-4-5-20251001

# Maximum tokens for AI responses (default: 4096)
ANTHROPIC_MAX_TOKENS=4096

# Temperature for response randomness (0.0 = deterministic, 1.0 = creative)
ANTHROPIC_TEMPERATURE=0.7

# ============================================
# Application Configuration (Optional)
# ============================================
# Spring profile to activate
# SPRING_PROFILES_ACTIVE=dev

# Server port (default: 8080)
# SERVER_PORT=8080

# JobRunr dashboard port (default: 8000)
# JOBRUNR_DASHBOARD_PORT=8000

# Log level (default: INFO)
# LOG_LEVEL=INFO
